<div class="section">
  {% for a in articles %}
  <div class="article-item">
    <div class="article-header">
      <div class="article-badge">{{ a.ReadType | upcase }}</div>
      <div class="article-title">
        <a title="{{ a.Title }}" href="{{ a.URL }}" target="_blank">{{ a.Title }}</a>
      </div>
    </div>
    <div class="article-info">
      <div class="article-time">{{ a.CreatedAtText }}</div>
      {% unless a.Domain == "" %}
      <span class="article-tag">Host: {{ a.Domain }}</span>
      {% endunless %} {% unless a.Author == "" %}
      <span class="article-tag">Author: {{ a.Author }}</span>
      {% endunless %}
    </div>
    <div class="article-description">
      {% unless a.Description == "" %}
      <div class="article-footer-left" title="{{ a.Description }}">
        {{ a.DescriptionText }}
      </div>
      {% endunless %}
    </div>
  </div>
  {% endfor %}
</div>
