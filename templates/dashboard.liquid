<h2>Statistics</h2>
{% if error == '' %}
  {% for item in stats %}
  <h3>{{ item.Name }}</h3>
  <div class="stat">
  <div class="stat-item">
    <div class="stat-title">All</div>
    <div class="stat-data">
      {{ item.All }}
    </div>
  </div>
  <div class="stat-item">
    <div class="stat-title">Read</div>
      <div class="stat-data">
      {{ item.Read }}
      </div>
    </div>
    <div class="stat-item">
      <div class="stat-title">Skim</div>
      <div class="stat-data">
        {{ item.Skim }}
      </div>
    </div>
    <div class="stat-item">
      <div class="stat-title">Skip</div>
      <div class="stat-data">
        {{ item.Skip }}
      </div>
    </div>
  </div>
  {% endfor %}
{% else %}
  {{ errMsg }}
{% endif %}

<h2>Status</h2>
<p>
  <ul>
    <li>Instance: {{ instance }}</li>
    <li>Timezone: {{ timezone }}</li>
    <li>Username: {{ username }}</li>
  </ul>
</p>
